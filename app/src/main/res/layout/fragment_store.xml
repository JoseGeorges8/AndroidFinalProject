<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.josegeorges.paintit.StoreFragment">

    <Button
        android:id="@+id/glossPaintButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Gloss Paint"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/semiGlossPaintButton"
        app:layout_constraintTop_toBottomOf="@id/guideline" />

    <Button
        android:id="@+id/semiGlossPaintButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Semi-Gloss Paint"
        tools:layout_editor_absoluteY="232dp"
        app:layout_constraintDimensionRatio="H,1:1"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/glossPaintButton"
        app:layout_constraintTop_toBottomOf="@id/guideline"/>

    <Button
        android:id="@+id/primerButton"
        app:layout_constraintTop_toBottomOf="@id/glossPaintButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Primer"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/semiGlossPaintButton" />

    <Button
        android:id="@+id/eggshellButton"
        app:layout_constraintTop_toBottomOf="@id/semiGlossPaintButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Eggshell"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/glossPaintButton" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="70dp"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>