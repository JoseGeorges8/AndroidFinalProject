<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout">

    <ImageView
        android:id="@+id/cart_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_camera_enhance_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/cart_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acrylic Flat Paint"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cart_image"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/cart_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:paddingBottom="3dp"
        android:text="Acrylic Flat Paint Yellow (5Gallon)"
        app:layout_constraintLeft_toRightOf="@+id/cart_image"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cart_item" />

    <TextView
        android:id="@+id/cart_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 19.99"
        app:layout_constraintLeft_toRightOf="@+id/cart_image"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cart_item_description" />

    <ImageButton
        android:id="@+id/remove_from_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>